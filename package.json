{
  "name": "mash",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/typescript",
      "**/typescript/**"
    ]
  },
  "scripts": {
    "bootstrap": "lerna clean --yes && lerna bootstrap && lerna link",
    "build": "lerna run build",
    "build:watch": "lerna run --stream build:watch",
    "build:fs": "(cd packages/mash-filesystem && yarn build)",
    "test": "lerna run test --stream",
    "dev:t": "(cd packages/mash-term && yarn run dev)",
    "test:watch:m": "(cd packages/mash && yarn run test:watch)",
    "test:watch:fs": "(cd packages/mash-filesystem && yarn run test:watch)",
    "test:watch:c": "(cd packages/mash-common && yarn run test:watch)"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.0",
    "jest": "^24.7.1",
    "lerna": "^3.13.1",
    "ts-jest": "^24.0.1",
    "ts-node": "^8.0.3",
    "typescript": "^3.4.1"
  }
}
